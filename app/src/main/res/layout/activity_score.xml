<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/backgroundColors">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greetingTV"/>


    <TextView
        android:id="@+id/scoreTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Your Score is:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="76dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailBTN"
        android:text="SEND SCORE TO MY EMAIL"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND YOUR SCORE  "
            android:id="@+id/sendScoreBTN"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPEN HIGH SCORE"
            android:id="@+id/openHighScoreBTN"/>



    </LinearLayout>







</LinearLayout>